{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "pnpm prebuild && tsc && tsc-alias",
    "dev": "node --env-file=.env --watch -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/main.js",
    "migrate": "drizzle-kit generate:pg",
    "lint": "eslint . --fix"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/pg": "^8.11.4",
    "drizzle-kit": "^0.20.14",
    "pino-pretty": "^11.0.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@repo/core-domain": "workspace:*",
    "@repo/types": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.4",
    "drizzle-zod": "^0.5.1",
    "fastify": "^4.26.2",
    "fastify-zod": "^1.4.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0",
    "zod": "^3.22.4"
  }
