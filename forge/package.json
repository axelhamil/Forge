{
  "name": "forge",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "postbuild": "copyfiles app/**/*.hbs public/**/*.css dist/ && cp -r database dist/",
    "build": "pnpm prebuild && tsc && tsc-alias && pnpm postbuild",
    "dev": "tsx watch --tsconfig tsconfig.json main.ts .env ",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/main.js",
    "migrate": "drizzle-kit generate:pg",
    "lint": "eslint . --fix"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/pg": "^8.11.4",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.20.14",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "vite": "^5.2.6"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^7.0.1",
    "@fastify/view": "^9.0.0",
    "@repo/core-domain": "workspace:*",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.4",
    "fastify": "^4.26.2",
    "fastify-zod": "^1.4.0",
    "handlebars": "^4.7.8",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "tsx": "^4.7.1",
    "tsyringe": "^4.8.0",
    "zod": "^3.22.4"
  }
}
